<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical">
    
   <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/studenttv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iCoach"
            android:textColor="#fff"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
 
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="iCoach Register"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/register_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_title"
        android:layout_marginLeft="-10dp"
        android:layout_below="@+id/login_title"
        android:layout_marginTop="40dp"
        android:textSize="15sp"
        android:textColor="#9F9EA3"
        android:text="@string/login_username" />

    <TextView
        android:id="@+id/register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_username"
        android:layout_below="@+id/register_username_input"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="#9F9EA3"
        android:text="@string/login_password" />

    <EditText
        android:id="@+id/register_password_input"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/register_username_input"
        android:layout_alignRight="@+id/register_username_input"
        android:layout_below="@+id/register_password"
        android:ems="10" />

    <ImageView
        android:id="@+id/register_password_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/register_username_pic"
        android:layout_below="@+id/register_password"
        android:src="@drawable/login_password_pic" />

    <ImageView
        android:id="@+id/register_username_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/register_password"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"
        android:src="@drawable/login_username_pic" />

    <EditText
        android:id="@+id/register_username_input"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/register_username"
        android:layout_toRightOf="@+id/register_username_pic"
        android:ems="10"
        android:inputType="textFilter" />

</RelativeLayout>

 <RelativeLayout
        android:id="@+id/register_button"
   	    android:layout_marginTop="60dp"
        android:layout_width="fill_parent"
        android:background="#fff"
        android:layout_height="100dp" >

     <Button
         android:id="@+id/button_register"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:width="150dp"
         android:text="Register" />

 </RelativeLayout>
    
 
    
 </LinearLayout>