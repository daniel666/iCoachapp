<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="#fff" >

        <Button
            android:id="@+id/newstudentbutton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedbutton"
            android:drawableLeft="@drawable/notepad"
            android:paddingRight="6dp"
            android:text="New Class"
            android:textColor="#000" />

        <Button
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/newstudentbutton"
            android:layout_alignBottom="@+id/newstudentbutton"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:background="@drawable/roundedbutton"
            android:text="Back" />

        <TextView
            android:id="@+id/studentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Class"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="24dp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/studentlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.00" >
    </ListView>

</LinearLayout>