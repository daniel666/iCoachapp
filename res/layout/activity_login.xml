<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F4F4F4"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="iCoach"
            android:fontFamily="sans-serif-thin" 
            android:textStyle="bold|italic"
            android:textColor="#000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_username"
            android:layout_below="@+id/login_username_input"
            android:layout_marginTop="20dp"
            android:text="@string/login_password"
            android:textColor="#9F9EA3"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/login_password_input"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/login_username_input"
            android:layout_alignRight="@+id/login_username_input"
            android:layout_below="@+id/login_password"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="3dp"
            android:text="e10adc3949ba59abbe56e057f20f883e" />

        <ImageView
            android:id="@+id/login_password_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/login_username_pic"
            android:layout_below="@+id/login_password"
            android:layout_alignTop="@id/login_password_input"
            android:src="@drawable/login_password_pic" />

        <ImageView
            android:id="@+id/login_username_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/login_password"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="26dp"
            android:layout_alignTop="@id/login_username_input"
            android:src="@drawable/login_username_pic" />

        <EditText
            android:id="@+id/login_username_input"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/login_username"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/login_username_pic"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textFilter"
            android:paddingLeft="3dp"
            android:text="coach003" />

        <TextView
            android:id="@+id/login_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_username_input"
            android:layout_below="@+id/login_title"
            android:layout_marginTop="40dp"
            android:text="@string/login_username"
            android:textColor="#9F9EA3"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_button"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="60dp" >

        <Button
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/roundedloginbox"
            android:text="Login"
            android:textColor="#000000"
            android:width="150dp" />
    </RelativeLayout>

</LinearLayout>